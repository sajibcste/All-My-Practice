@using MVC.Models

@{
    Layout = null;
    List<Catagories> catagorieses = ViewBag.catagories;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
</head>
<body>
<div>
    @if (ViewBag != null)
    {
        @ViewBag.message
    }
    <form method="POST">
        <table>
            <tr>
                <td><label for="Name">Name</label></td>
                <td ><input type="text" id="name" name="Name"/></td>
            </tr>
            <tr>
                <td><label for="Price">Price</label></td>
                <td ><input type="text" id="price" name="Price"/></td>
            </tr>
            <tr>
                <td><label for="CatagoriesId"> Catagorie</label></td>
                <td><select id="CatagoriesId" name="CatagoriesId">
                    @foreach (Catagories catagories in catagorieses)
                    {
                          <option value="@catagories.Id">@catagories.Name</option>
  
                    }
               
                </select></td>
            </tr>
            <tr>
                <td></td>
                <td ><input type="submit" value="Save"/></td>
            </tr>
        </table>
    </form>
</div>
</body>
</html>
